generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  Admin
  Driver
}

model User {
  id        BigInt      @id @default(autoincrement())
  email     String      @unique
  name      String
  role      Role
  vehicle   Vehicle[]
}

model Vehicle {
  id            BigInt      @id @default(autoincrement())
  make          String
  model         String
  registration  String      @unique
  mileage       BigInt
  driver        User        @relation(fields: [driverId], references: [id])
  driverId      BigInt
  issues        Issue[]
}

model Issue {
  id          BigInt      @id @default(autoincrement())
  title       String
  description String
  severity    Int
  closed      Boolean
  vehicle     Vehicle     @relation(fields: [vehicleId], references: [id])
  vehicleId   BigInt
}